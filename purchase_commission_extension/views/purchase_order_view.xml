<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_agent_form_inherit" model="ir.ui.view">
        <field name="name">purchase.agent.order.inherit.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="after">
                <field name="commission_free" column_invisible="1"/>
                <button
                    name="button_edit_agents"
                    title="Edit agents"
                    icon="fa-users"
                    invisible="commission_free"
                    type="object"
                />
                <field name="commission_status" optional="show"/>
            </xpath>

            <xpath expr="//field[@name='amount_total']" position="after">
                <field
                    name="commission_total"
                    widget="monetary"
                    options="{'currency_field': 'currency_id'}"
                />
            </xpath>

            <xpath expr="//field[@name='notes']" position="after">
                <group name="group_recompute_commission">
                    <button
                        name="recompute_lines_agents"
                        type="object"
                        string="Regenerate agents"
                        invisible="state not in ['draft', 'sent']"
                    />
                    <button
                        name="recompute_lines_agents_amount"
                        type="object"
                        string="Recompute amounts"
                        invisible="state not in ['draft', 'sent']"
                    />
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_filter_agent" model="ir.ui.view">
        <field name="name">view_purchase_order_filter_agent</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="partner_agent_ids" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_purchase_order_line_agent_tree">
        <field name="name">purchase.order.line.agent.tree</field>
        <field name="model">purchase.order.line.agent</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="agent_id" context="{'default_agent': True, 'default_supplier': True}"/>
                <field
                    name="commission_id"
                    domain="['|', ('settlement_type', '=', 'purchase_invoice'), ('settlement_type', '=', False)]"
                />
                <field name="amount"/>
            </tree>
        </field>
    </record>
</odoo>