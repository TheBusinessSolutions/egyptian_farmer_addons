<odoo>
    <record id="account_account_move_tree_inherited" model="ir.ui.view">
        <field name="name">account.move.tree.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_register_payment']" position="after">
                <button name="action_split_payment"
                        type="object"
                        string="Split Payment"
                        />

            </xpath>
        </field>
    </record>
    <record id="account_account_move_bill_tree_inherited" model="ir.ui.view">
        <field name="name">account.move.bill.tree.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_register_payment']" position="after">
                <button name="action_split_payment"
                        type="object"
                        string="Split Payment"
                        />
            </xpath>
        </field>
    </record>
</odoo>
