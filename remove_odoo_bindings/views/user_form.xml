<odoo>
    <data>
        <!-- Hide Notification and mailbot from user form !-->
        <record id="inherited_base_view_users_form_mail_notification_hide"
            model="ir.ui.view">
            <field name="name">inherited.res.users.form.mai.remove.notification</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="mail.view_users_form_mail" />
            <field name="arch" type="xml">
                <!-- Notification type field -->
                <xpath expr="//field[@name='notification_type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <!-- Odoobot status field -->
                <!-- If you have uninstalled mail_bot module , please comment/remove the below xpath -->
                <xpath expr="//field[@name='odoobot_state']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>