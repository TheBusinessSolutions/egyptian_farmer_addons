<odoo>
    <!-- Form view for customer selection -->
    <record id="view_customer_ledger_form" model="ir.ui.view">
        <field name="name">customer.ledger.report.form</field>
        <field name="model">customer.ledger.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="customer_id"/>
                    </group>
                    <footer>
                        <button name="action_view_report" string="View Report" type="object" class="btn-primary"/>
                        <button name="action_export_pdf" string="Export PDF" type="object" class="btn-secondary"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view for report display -->
    <record id="view_customer_ledger_report_tree" model="ir.ui.view">
        <field name="name">customer.ledger.report.tree</field>
        <field name="model">customer.ledger.report</field>
        <field name="arch" type="xml">
            <tree string="Customer Ledger" create="false" decoration-info="is_invoice_line==True">
                <field name="is_invoice_line" invisible="1"/>
                <field name="parent_move_id" invisible="1"/>
                <field name="customer_id"/>
                <field name="date"/>
                <field name="description"/>
                <field name="product_id" invisible="not is_invoice_line"/>
                <field name="quantity" invisible="not is_invoice_line"/>
                <field name="uom_id" invisible="not is_invoice_line"/>
                <field name="unit_price" invisible="not is_invoice_line"/>
                <field name="tax_ids" widget="many2many_tags" invisible="not is_invoice_line"/>
                <field name="item_total" invisible="not is_invoice_line"/>
                <field name="debit" invisible="is_invoice_line"/>
                <field name="credit" invisible="is_invoice_line"/>
                <field name="balance" invisible="is_invoice_line"/>
            </tree>
        </field>
    </record>
</odoo>
