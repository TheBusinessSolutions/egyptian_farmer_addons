<odoo>
    <record id="view_customer_ledger_report_tree" model="ir.ui.view">
        <field name="name">customer.ledger.report.tree</field>
        <field name="model">customer.ledger.report</field>
        <field name="arch" type="xml">
            <tree string="Customer Ledger" decoration-info="is_invoice_line==True">
                <field name="is_invoice_line" invisible="1"/>
                <field name="parent_move_id" invisible="1"/>
                <field name="customer_id"/>
                <field name="date"/>
                <field name="description"/>
                <field name="product_id" attrs="{'invisible': [('is_invoice_line', '=', False)]}"/>
                <field name="quantity" attrs="{'invisible': [('is_invoice_line', '=', False)]}"/>
                <field name="uom_id" attrs="{'invisible': [('is_invoice_line', '=', False)]}"/>
                <field name="unit_price" attrs="{'invisible': [('is_invoice_line', '=', False)]}"/>
                <field name="tax_ids" widget="many2many_tags" attrs="{'invisible': [('is_invoice_line', '=', False)]}"/>
                <field name="item_total" attrs="{'invisible': [('is_invoice_line', '=', False)]}"/>
                <field name="debit" attrs="{'invisible': [('is_invoice_line', '=', True)]}"/>
                <field name="credit" attrs="{'invisible': [('is_invoice_line', '=', True)]}"/>
                <field name="balance" attrs="{'invisible': [('is_invoice_line', '=', True)]}"/>
                
                <header>
                    <button name="action_export_pdf" type="object" string="Export PDF" class="oe_highlight"/>
                </header>
            </tree>
        </field>
    </record>
</odoo>
