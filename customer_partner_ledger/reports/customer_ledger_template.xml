<odoo>
    <record id="customer_ledger_report" model="ir.actions.report">
        <field name="name">Customer Ledger</field>
        <field name="model">customer.ledger.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">customer_partner_ledger.report_customer_ledger</field>
        <field name="print_report_name">'Customer Ledger - %s' % (object.customer_id.name)</field>
    </record>

    <template id="report_customer_ledger">
        <!-- Ensure the report inherits the standard layout -->
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="docs[0]"/>
            <main>
                <div class="oe_structure">
                    <h2>Partner Ledger Report</h2>
                    
                    <h4>
                        Partner: <t t-esc="doc.customer_id.name"/>
                    </h4>

                    <table class="table table-condensed" style="width: 100%;">
                        <thead>
                            <tr style="background-color: #f0f0f0;">
                                <th style="width: 12%;">Date</th>
                                <th style="width: 28%;">Description</th>
                                <th style="width: 15%; text-align: right;">Debit</th>
                                <th style="width: 15%; text-align: right;">Credit</th>
                                <th style="width: 15%; text-align: right;">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.get_ledger_data(doc.customer_id.id)" t-as="entry">
                                <!-- Main invoice/transaction row -->
                                <tr t-att-style="'font-weight: bold;' if entry.get('is_invoice') else ''">
                                    <td><t t-esc="entry['date']"/></td>
                                    <td><t t-esc="entry['description']"/></td>
                                    <td style="text-align: right;">
                                        <t t-esc="'{:,.2f}'.format(entry['debit'])" t-if="entry['debit'] > 0"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <t t-esc="'{:,.2f}'.format(entry['credit'])" t-if="entry['credit'] > 0"/>
                                    </td>
                                    <td style="text-align: right;">
                                        <t t-esc="'{:,.2f}'.format(entry['balance'])"/>
                                    </td>
                                </tr>

                                <!-- Invoice line items (if this is an invoice) -->
                                <t t-if="entry.get('is_invoice') and entry.get('invoice_lines')">
                                    <!-- Header row for line items -->
                                    <tr style="background-color: #f9f9f9; font-size: 11px;">
                                        <td colspan="2" style="padding-left: 40px; font-weight: bold;">Product</td>
                                        <td style="text-align: center; font-weight: bold;">Qty</td>
                                        <td style="text-align: center; font-weight: bold;">UoM</td>
                                        <td style="text-align: right; font-weight: bold;">Unit Price</td>
                                    </tr>
                                    <tr style="background-color: #f9f9f9; font-size: 11px;">
                                        <td style="text-align: center; font-weight: bold;">Tax</td>
                                        <td style="text-align: center; font-weight: bold;">Discount %</td>
                                        <td colspan="2" style="text-align: right; font-weight: bold;">Line Total</td>
                                        <td></td>
                                    </tr>

                                    <!-- Detail rows for each line item -->
                                    <t t-foreach="entry['invoice_lines']" t-as="line">
                                        <tr style="background-color: #fafafa; font-size: 10px;">
                                            <td colspan="2" style="padding-left: 40px;">
                                                <t t-esc="line['product_name']"/>
                                            </td>
                                            <td style="text-align: center;">
                                                <t t-esc="'{:,.2f}'.format(line['quantity'])"/>
                                            </td>
                                            <td style="text-align: center;">
                                                <t t-esc="line['uom']"/>
                                            </td>
                                            <td style="text-align: right;">
                                                <t t-esc="'{:,.2f}'.format(line['unit_price'])"/>
                                            </td>
                                        </tr>
                                        <tr style="background-color: #fafafa; font-size: 10px;">
                                            <td style="text-align: center;">
                                                <t t-esc="'{:,.2f}'.format(line['tax'])"/>
                                            </td>
                                            <td style="text-align: center;">
                                                <t t-esc="'{:,.2f}'.format(line['discount'])" t-if="line['discount'] > 0"/>
                                                <t t-if="line['discount'] == 0">-</t>
                                            </td>
                                            <td colspan="2" style="text-align: right; font-weight: bold;">
                                                <t t-esc="'{:,.2f}'.format(line['line_total'])"/>
                                            </td>
                                            <td></td>
                                        </tr>

                                        <!-- Separator line between items -->
                                        <tr style="background-color: #fafafa;">
                                            <td colspan="5" style="border-bottom: 1px dashed #ddd;"></td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </tbody>

                        <!-- Closing Balance Row -->
                        <tfoot>
                            <tr style="font-weight: bold; background-color: #e0e0e0;">
                                <td colspan="4" style="text-align: right; padding-right: 10px;">Closing Balance:</td>
                                <td style="text-align: right;">
                                    <t t-esc="'{:,.2f}'.format(doc.get_ledger_data(doc.customer_id.id)[-1]['balance'])"/>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </main>
        </t>
    </template>

</odoo>