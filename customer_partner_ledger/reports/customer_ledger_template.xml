<odoo>
    <record id="customer_ledger_report" model="ir.actions.report">
        <field name="name">Customer Ledger</field>
        <field name="model">customer.ledger.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">customer_partner_ledger.report_customer_ledger</field>
        <field name="print_report_name">'Customer Ledger - %s' % (object.customer_id.name)</field>
    </record>

    <template id="report_customer_ledger">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="docs[0]"/>
            <main>
                <div class="oe_structure">
                    <h2>Partner Ledger Report</h2>
                    <h4>Partner: <t t-esc="doc.customer_id.name"/></h4>

                    <table class="table table-condensed table-bordered">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>UoM</th>
                                <th>Unit Price</th>
                                <th>Discount</th>
                                <th>Taxes</th>
                                <th>Line Total</th>
                                <th>Debit</th>
                                <th>Credit</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.get_ledger_data(doc.customer_id.id)" t-as="entry">
                                <tr t-att-class="entry.get('is_invoice_line') and 'text-info' or ''">
                                    <td><t t-esc="entry.get('date')"/></td>
                                    <td><t t-esc="entry.get('description')"/></td>
                                    
                                    <!-- Invoice Line Details -->
                                    <t t-if="entry.get('is_invoice_line')">
                                        <td><t t-esc="entry.get('product_id') and doc.env['product.product'].browse(entry.get('product_id')).name or ''"/></td>
                                        <td class="text-right"><t t-esc="entry.get('quantity', 0)"/></td>
                                        <td><t t-esc="entry.get('uom_id') and doc.env['uom.uom'].browse(entry.get('uom_id')).name or ''"/></td>
                                        <td class="text-right"><t t-esc="'%.2f' % entry.get('unit_price', 0)"/></td>
                                        <td class="text-right"><t t-esc="'%.2f' % entry.get('discount', 0)"/>%</td>
                                        <td>
                                            <t t-foreach="entry.get('tax_ids', [])" t-as="tax_id">
                                                <span t-esc="doc.env['account.tax'].browse(tax_id).name"/>
                                                <t t-if="not tax_id_last">, </t>
                                            </t>
                                        </td>
                                        <td class="text-right"><t t-esc="'%.2f' % entry.get('item_total', 0)"/></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </t>
                                    
                                    <!-- Invoice/Payment Summary -->
                                    <t t-else="">
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td class="text-right"><t t-esc="'%.2f' % entry.get('debit', 0)"/></td>
                                        <td class="text-right"><t t-esc="'%.2f' % entry.get('credit', 0)"/></td>
                                        <td class="text-right"><strong><t t-esc="'%.2f' % entry.get('balance', 0)"/></strong></td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr style="font-weight: bold; background-color: #f0f0f0;">
                                <td colspan="11" style="text-align: right;">Closing Balance:</td>
                                <td class="text-right">
                                    <t t-set="ledger_data" t-value="doc.get_ledger_data(doc.customer_id.id)"/>
                                    <t t-if="ledger_data">
                                        <t t-esc="'%.2f' % ledger_data[-1].get('balance', 0)"/>
                                    </t>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </main>
        </t>
    </template>
</odoo>