<odoo>
    <record id="customer_ledger_report" model="ir.actions.report">
        <field name="name">Customer Ledger</field>
        <field name="model">customer.ledger.report</field>
        <field name="report_type">qweb-pdf</field>
       <!-- <field name="binding_model_id" ref="customer.ledger.report"/> -->
        <!-- <field name="groups_id" eval="[(4, ref('base.group_user'))]"/> -->
        <field name="report_name">customer_partner_ledger.report_customer_ledger</field>
        <field name="print_report_name">'Customer Ledger - %s' % (object.customer_id.name)</field>
    </record>

    <template id="report_customer_ledger">
        <!-- Ensure the report inherits the standard layout -->
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="docs[0]"/>
            <main>
                <div class="oe_structure">
                    <h2>Partner Ledger Report</h2>
                    <h4>Partner: <t t-esc="doc.customer_id.name"/></h4>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Description</th>
                                <th t-if="doc.is_invoice_line">Product</th>
                                <th t-if="doc.is_invoice_line">Quantity</th>
                                <th t-if="doc.is_invoice_line">UoM</th>
                                <th t-if="doc.is_invoice_line">Unit Price</th>
                                <th t-if="doc.is_invoice_line">Tax</th>
                                <th t-if="doc.is_invoice_line">Item Total</th>
                                <th t-if="not doc.is_invoice_line">Debit</th>
                                <th t-if="not doc.is_invoice_line">Credit</th>
                                <th t-if="not doc.is_invoice_line">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.get_ledger_data(doc.customer_id.id)" t-as="entry">
                                <tr t-att-class="entry.get('is_invoice_line') and 'text-info' or ''">
                                    <td><t t-esc="entry.get('date')"/></td>
                                    <td><t t-esc="entry.get('description')"/></td>
                                    <t t-if="entry.get('is_invoice_line')">
                                        <td><t t-esc="entry.get('product_id') and doc.env['product.product'].browse(entry.get('product_id')).name"/></td>
                                        <td><t t-esc="entry.get('quantity')"/></td>
                                        <td><t t-esc="entry.get('uom_id') and doc.env['uom.uom'].browse(entry.get('uom_id')).name"/></td>
                                        <td><t t-esc="entry.get('unit_price')"/></td>
                                        <td>
                                            <t t-foreach="entry.get('tax_ids', [])" t-as="tax_id">
                                                <span t-esc="doc.env['account.tax'].browse(tax_id).name"/><br/>
                                            </t>
                                        </td>
                                        <td><t t-esc="entry.get('item_total')"/></td>
                                    </t>
                                    <t t-if="not entry.get('is_invoice_line')">
                                        <td><t t-esc="entry.get('debit')"/></td>
                                        <td><t t-esc="entry.get('credit')"/></td>
                                        <td><t t-esc="entry.get('balance')"/></td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="8" style="text-align: right; font-weight: bold;">Closing Balance:</td>
                                <td><t t-esc="doc.get_ledger_data(doc.customer_id.id)[-1]['balance']"/></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </main>
        </t>
    </template>

</odoo>
