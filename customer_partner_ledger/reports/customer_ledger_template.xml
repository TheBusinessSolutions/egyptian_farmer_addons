<odoo>
    <!-- Tree view for Customer Ledger Report -->
    <record id="view_customer_ledger_report_tree" model="ir.ui.view">
        <field name="name">customer.ledger.report.tree</field>
        <field name="model">customer.ledger.report</field>
        <field name="arch" type="xml">
            <tree string="Customer Ledger" decoration-info="description == 'Closing Balance'">
                <field name="date"/>
                <field name="description"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance"/>
                <field name="customer_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form view for Customer Ledger Report -->
    <record id="view_customer_ledger_report_form" model="ir.ui.view">
        <field name="name">customer.ledger.report.form</field>
        <field name="model">customer.ledger.report</field>
        <field name="arch" type="xml">
            <form string="Customer Ledger Details">
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="date"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="debit"/>
                            <field name="credit"/>
                            <field name="balance"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Invoice Line Details" attrs="{'invisible': [('line_ids', '=', [])]}">
                            <field name="line_ids">
                                <tree string="Invoice Lines" editable="bottom">
                                    <field name="product_name"/>
                                    <field name="quantity"/>
                                    <field name="uom"/>
                                    <field name="unit_price"/>
                                    <field name="taxes"/>
                                    <field name="line_amount" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_export_pdf" type="object" string="Export PDF" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Tree view for Invoice Lines -->
    <record id="view_customer_ledger_line_tree" model="ir.ui.view">
        <field name="name">customer.ledger.line.tree</field>
        <field name="model">customer.ledger.line</field>
        <field name="arch" type="xml">
            <tree string="Invoice Line Details">
                <field name="product_name"/>
                <field name="quantity"/>
                <field name="uom"/>
                <field name="unit_price"/>
                <field name="taxes"/>
                <field name="line_amount"/>
            </tree>
        </field>
    </record>
</odoo>